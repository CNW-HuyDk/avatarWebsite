body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    display: flex;
    flex-direction: row;
    justify-content: space-around; 
    padding: 5px;
}

.box {
    width: 50px;
    height: 50px;
    background-color: #3498db;
    color: #fff;
    text-align: center;
    line-height: px;
    cursor: pointer;
}

.big-image-container {
    text-align: center;
    margin-top: 20px;
}

#bigImage {
    max-width: 100%;
    max-height: 400px;
    border: 0px solid #ccc;
}

.image-container {
    position: relative;
}

.image {
    position: absolute;
    top: 400px;
    left: 100px;
}

.imageMieng {
    position: absolute; 
    top:    475px;
    left:   100px;
    z-index: 1; /* Use z-index to control the stacking order */
}

